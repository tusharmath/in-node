{
  "author": "Tushar Mathur <tusharmath@gmail.com>",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "description": "Checks if the program is running in node env.",
  "keywords": [
    "typescript",
    "node",
    "environment"
  ],
  "license": "ISC",
  "main": "index.js",
  "name": "in-node",
  "repository": {
    "type": "git",
    "url": "https://github.com/tusharmath/in-node.git"
  },
  "scripts": {
    "create-docs": "typedoc",
    "lint": "tslint --project .",
    "prepublishOnly": "tsc -d",
    "prettier": "git ls-files | grep -E '.*\\.(ts|md|json)$' | xargs prettier --write --config=.prettierrc",
    "semantic-release": "semantic-release",
    "test": "mocha --require=ts-node/register --watch-extensions ts test/*.ts",
    "travis-deploy-once": "travis-deploy-once --pro"
  },
  "version": "0.0.0-development",
  "devDependencies": {
    "@types/node": "^12.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "prettier": "^1.17.0",
    "semantic-release": "^15.13.3",
    "travis-deploy-once": "^5.0.11",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5",
    "typescript-tslint-plugin": "^0.3.1"
  }
}
